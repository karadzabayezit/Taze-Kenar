{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": [
    "vite.config.ts",
    "./declaration.d.ts",
    "src/*/*.ts",
    "src/*/*.tsx",
    "src/**/**/*.ts",
    "src/**/**/*.tsx"
  ]
}
